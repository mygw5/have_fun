<% group.chats.each do |chat| %>
  <% if current_user.id == chat.user.id %>
    <div class="d-flex flex-row-reverse">
      <div class="mx-3">
        <%= image_tag chat.user.get_profile_image, size: '50x50', class: "rounded-circle" %><br>
         <p class="user-name"><%= chat.user.name %></p>
      </div>
      <p class="p-3 bg-primary rounded text-light"><%= chat.message %></p>
    </div>
  <% else %>
    <div class="d-flex">
      <%= link_to user_path(chat.user.id),class: "text-reset" do %>
        <div class="mx-3">
          <%= image_tag chat.user.get_profile_image, size: '50x50', class: "rounded-circle" %><br>
          <p class="user-name"><%= chat.user.name %></p>
        </div>
      <% end %>
      <p class="p-2 bg-light border border-secondary rounded"><%= chat.message %></p>
    </div>
  <% end %>
<% end %>


