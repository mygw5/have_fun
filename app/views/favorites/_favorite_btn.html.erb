<% if post_hobby.favorited_by?(current_user) %>
  <%= link_to post_hobby_favorites_path(post_hobby), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true">お気に入り</i>
  <% end %>
<% else %>
  <%= link_to post_hobby_favorites_path(post_hobby), method: :post, remote: true do %>
    <i class="far fa-heart" aria-hidden="true">お気に入り</i>
  <% end %>
<% end %>