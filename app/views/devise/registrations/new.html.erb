<div class="row justify-content-center pt-5">
  <div class="col-8">
    <h2>新規登録</h2>

    <div class="row justify-content-center">
      <%= form_with(model: resource, scope: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <table class="table table-borderless signup-form">
          <tr>
            <th><%= f.label :name, "名前" %></th>
            <td><%= f.text_field :name, autofocus: true, class: "form-control" %></td>
          </tr>

          <tr>
            <th><%= f.label :email, "メールアドレス" %></th>
            <td><%= f.email_field :email, autocomplete: "email", class: "form-control" %></td>
          </tr>

          <tr>
            <th>
              <%= f.label :password, "パスワード" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %>
            </th>
            <td>
              <%= f.password_field :password, autocomplete: "new-password", id: "new-passwordcheck", class: "form-control" %>
              <!-- パスワードの可視化 -->
              <input type="checkbox" onChange="document.getElementById('new-passwordcheck').type = (this.checked) ? 'text' : 'password';">
              パスワードを表示する
            </td>
          </tr>

          <tr>
            <th><%= f.label :password_confirmation, "パスワード確認" %></th>
            <td>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "new-passwordcheck-confirm", class: "form-control" %>
              <!-- パスワードの可視化 -->
              <input type="checkbox" onChange="document.getElementById('new-passwordcheck-confirm').type = (this.checked) ? 'text' : 'password';">
              パスワードを表示する
            </td>
          </tr>

          <tr>
            <th></th>
            <td class="action"><%= f.submit "登録する", class: "btn btn-success" %></td>
          </tr>
          <tr>
            <th></th>
            <td class="action"><%= render "devise/shared/links" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>