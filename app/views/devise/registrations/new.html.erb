<%= render 'layouts/flash' %>

<div class="row justify-content-center pt-5">
  <div class="col-8">
    <h2>新規登録</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

          <%= f.input :name, autofocus: true, required: true, :class => "form-control" %>

          <%= f.input :email, autocomplete: "email", required: true, :class => "form-control" %>

          <%= f.input :password, autocomplete: "new-password", required: true, :class => "form-control" %>


          <%= f.input :password_confirmation, autocomplete: "new-password", required: true, :class => "form-control" %>

          <div class="action"><%= f.submit "登録する", class: "btn btn-success" %></div>

          <div class="action"><%= render "devise/shared/links" %></div>
      <% end %>
  </div>
</div>