<div class="row justify-content-center pt-5">
  <div class="col-8">
    <h2>ログイン</h2>


      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <%= f.input :email, autocomplete: "email", :class => "form-control" %>

        <%= f.input :password, autocomplete: "current-password", id: "passwordcheck", :class => "form-control" %>

        <div class="pt-3">
          <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログインしたままにする" %>
          <% end %>
        </div>

        <div class="action">
          <%= f.submit "ログインする", class: "btn btn-primary" %>
        </div>
      <% end %>


    <div class="text-right">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>


