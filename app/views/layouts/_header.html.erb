              <% else %>
                <li class="nav-item"><%= link_to 'マイページ', user_path(current_user), class: "text-light" %></li>
                <li class="nav-item"><%= link_to '投稿一覧', post_hobbies_path, class: "text-light" %></li>
                <li class="nav-item"><%= link_to 'グループ', groups_path, class: "text-light" %></li>
