<table class="profile">
  <tr>
    <th>名前</th>
    <td><%= user.name %></td>
  </tr>

  <tr>
    <th>趣味</th>
    <td><%= user.hobby %></td>
  </tr>

  <tr>
    <th>自己紹介</th>
    <td><%= user.introduction %></td>
  </tr>

  <% if current_user.admin? %>
    <tr>
      <th>ステータス</th>
      <% if user.is_status == true %>
        <td><span class="text-success">有効</span></td>
      <% else %>
        <td><span class="text-danger">退会</span></td>
      <% end %>
    </tr>
  <% end %>
</table>

<div class="mt-1 text-center">
  <% if current_user.admin? %>
    <%= render 'relationships/btn', user: user %>
    <%= link_to edit_user_path(user), class: "btn btn-secondary px-5" do %>
      <i class="fas fa-user-cog">　編集する</i>
    <% end %>
  <% elsif current_user == user %>
    <% unless user.guest_user? %>
      <%= link_to edit_user_path(user), class: "btn btn-secondary px-5" do %>
        <i class="fas fa-user-cog">　編集する</i>
      <% end %>
    <% end %>
  <% else %>
    <%= render 'relationships/btn', user: user %>
  <% end %>
</div>