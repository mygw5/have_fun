<%= render 'layouts/flash' %>

<div class="row justify-content-center mt-5">
  <div class="col-lg-5 col-md-10 col-sm-10 col-10 text-center">
    <%= image_tag @user.get_profile_image, class: "rounded-circle profile-img" %>
  </div>

  <div class="col-lg-4 col-md-10 col-sm-10 col-10 info">
    <h4><span>マイページ</span></h4>
    <%= render 'info', user: @user %>
  </div>
</div>

<div class="row justify-content-center mt-5">
  <% if @post_hobbies.present? %>
    <div class="col-lg-10 d-flex flex-wrap col-md-10 col-sm-10 col-10">
      <%= render 'post', post_hobbies: @post_hobbies, user: @user %>
    </div>
  <% else %>
    <div class="pt-5">
      <p>投稿がありません</p>
    </div>
  <% end %>
</div>

<%= paginate @post_hobbies %>