<div class="row justify-content-center pt-5">
  <div class="col-6">
    <h4><span>ユーザー情報編集</span></h4>
    <%= form_with model: @user, local: true do |f| %>
      <div class="form-group">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :profile_image, class: "image-label" do %>
          <i class="fas fa-portrait"></i>　プロフィール画像
        <% end %>
        <%= f.file_field :profile_image, accept: 'image/*', class: "image-form" %>
      </div>

      <div class="form-group">
        <%= f.label :hobby, "趣味" %>
        <%= f.text_field :hobby, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction, "自己紹介" %>
        <%= f.text_field :introduction, class: "form-control" %>
      </div>

      <% if current_user.admin? %>
        <div>
          <%= f.label :is_status, "会員ステータス" %>
          <%= f.radio_button :is_status, true %>
          <%= f.label :is_status_true, "有効" %>
          <%= f.radio_button :is_status, false %>
          <%= f.label :is_status_false, "退会" %>
        </div>
      <% end %>

      <div class="action">
        <%= f.submit '編集内容を保存する', class: "btn btn-success" %>
        <% if @user == current_user %>
          <% unless current_user.admin? %>
            <%= link_to '退会する', user_confirm_withdraw_path(@user), class: "btn btn-danger" %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>