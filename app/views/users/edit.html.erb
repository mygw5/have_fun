<div class="row">
  <h3>投稿編集</h3>
</div>

<div class="row justify-content-center">
  <div class="col-6">
    <%= form_with model: @user, local: true do |f| %>

      <div class="form-group">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :profile_image, "画像を選択する", class: "image-label" %>
        <%= f.file_field :profile_image, accept: 'image/*', class: "image-form" %>
      </div>

      <div class="form-group">
        <%= f.label :hobby, "趣味" %>
        <%= f.text_field :hobby, class: "form-control" %>
      </div>
      <% if current_user.admin? %>
        <div>
          <%= f.label :is_deleted, "会員ステータス" %>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted_true, "有効" %>
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted_false, "退会" %>
        </div>
      <% end %>
      <%= f.submit '編集内容を保存する', class: "btn btn-success" %>
    <% end %>
    <%= link_to '退会する', user_confirm_withdraw_path(@user), class: "btn btn-danger" %>
  </div>
</div>