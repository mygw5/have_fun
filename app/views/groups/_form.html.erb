<%= form_with model: @group, local: true do |f| %>
  <div class="form-group">
    <%= f.label :group_name, "グループ名" %>
    <%= f.text_field :group_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :introduction, "グループ紹介" %>
    <%= f.text_area :introduction, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :group_image, "グループ画像", class: "image-label" do %>
      <i class="far fa-image"> グループ画像</i>
    <% end %>
    <%= f.file_field :group_image, class: "form-control-file image-form" %>
  </div>

  <div class="action">
    <%= f.submit '登録する', class: "btn btn-success" %>
  </div>
<% end %>