<div class="row py-3">
  <h3><span>メンバー一覧</span></h3>
</div>

<div class="row justify-content-center p-5">
  <div class="col-lg-6 col-md-8 member-list">
    <table class="table">
      <% @members.each do |member| %>
      <tr>
        <td>
          <% if member == @user %>
            <i class="fas fa-star"></i>
          <% end %>
        </td>
        <td><%= image_tag member.get_profile_image, class: "profile-img" %></td>
        <td><%= link_to member.name, user_path(member) %></td>
        <td><%= member.introduction %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>