<div class="row py-3">
    <h3>下書き/非公開一覧</h3>
</div>

<div class="row justify-content-center">
  <div class="col-5">
    <table class="table table-hover">
      <tbody>
        <% @post_hobbies.each do |post_hobby| %>
        <% unless post_hobby.published? %>
            <tr>
              <td><%= image_tag post_hobby.get_post_image %></td>
              <td><%= post_hobby.title %></td>
              <td><%= post_hobby.text %></td>
              <td><%= post_hobby.post_status_i18n %></td>
              <td><%= link_to '編集する', edit_post_hobby_path(post_hobby) %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

