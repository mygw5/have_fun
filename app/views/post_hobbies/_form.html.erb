<%= form_with model: post_hobby, local: true do |f| %>
  <div class="form-group">
    <%= f.label :タイトル　%>
    <%= f.text_field :title,     class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :本文 %>
    <%= f.text_area  :text,      class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :画像 %>
    <%= f.file_field :post_image, class: "form-control-file", accept: 'image/*' %>
  </div>
  <div class="form-group">
    <%= f.label :タグ %>
    <%= f.text_field :tag_name,   class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.radio_button :post_status, "published" %>
    <%= f.label :post_status_published, "公開" %>
    <%= f.radio_button :post_status, "draft" %>
    <%= f.label :post_status_draft, "下書き" %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>