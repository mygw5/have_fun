<%= form_with model: post_hobby, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title, "タイトル"　%>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :text, "本文" %>
    <%= f.text_area  :text, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :post_image, "画像" %>
    <%= f.file_field :post_image, accept: 'image/*', class: "form-control-file" %>
  </div>
  <div class="form-group">
    <%= f.label :tag_name, "タグ" %>
    <%= f.text_field :tag_name, value: tag_list, class: "form-control" %>
  </div>

  <div>
    <%= f.submit '投稿する' %>
  </div>

<% end %>