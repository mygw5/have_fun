<%= form_with model: post_hobby, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :text, "本文" %>
    <%= f.text_area  :text, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :post_image, "画像", class: "image-label" do %>
      <i class="fas fa-images"> 画像を選択する</i>
    <% end %>
    <%= f.file_field :post_image, accept: 'image/*', class: "image-form" %>
  </div>
  <div class="form-group">
    <%= f.label :tag_name, "タグ (半角,をつけることで複数タグを登録することができます）" %>
    <%= f.text_field :tag_name, value: tag_list, class: "form-control" %>
  </div>

  <div>
    <%= f.submit '投稿する' %>
  </div>

<% end %>