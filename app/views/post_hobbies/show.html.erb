<div class="row">
  <div class="col-4 offset-1">
    <%= image_tag @post_hobby.get_post_image, size: "200x150"  %>
    <p><%= @post_hobby.created_at %></p>
    <span>
      <% if @post_hobby.user = current_user %>
        <%= link_to '編集する', edit_post_hobby_path(@post_hobby) %>
        <%= link_to '削除する', post_hobby_path(@post_hobby), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      <% end %>
    </span>
    <h3><%= @post_hobby.title %></h3>
    <p><%= @post_hobby.text %></p>
    <p><%= link_to @post_hobby.tags.map(&:tag_name).join(',') %></p>
  </div>
  <div class="col-7">
    <% @post_hobby.comments.each do |hobby_comment| %>
      <p><%= image_tag comment.user.get_profile_image, size: "50x50" %></p>
      <p>
        <%= hobby_comment.user.name %>
        <%= hobby_comment.created_at.strftime('%Y/%m/%d')%>
        <%= hobby_comment.comment %>
      </p>
    <% end %>
    <p>
     <%= form_with model:[@post_hobby, @comment] do |f| %>
       <%= f.text_area :comment, rows: '5', placeholder: "コメントを入力" %>
       <%= f.submit "送信する", class: "btn-sm btn-primary" %>
     <% end %>
    </p>
  </div>
</div>