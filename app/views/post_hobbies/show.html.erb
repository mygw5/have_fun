<div class="row pt-5">
  <div class="col-4 offset-1">

    <%= image_tag @post_hobby.get_post_image, class: "post-img" %>
    <p>
      <%= @post_hobby.created_at.strftime('%Y/%m/%d %H:%M') %>
      <% if @post_hobby.user = current_user %>
        <%= link_to '編集する', edit_post_hobby_path(@post_hobby) %>
        <%= link_to '削除する', post_hobby_path(@post_hobby), method: :delete, "data-confirm" => "削除するとコメントやお気に入り登録などのが全て消えます。本当に削除しますか？" %>
      <% end %>
    </p>


    <div class="post-detail">
      <h4><%= @post_hobby.title %></h4>
      <p class="text"><%= @post_hobby.text %></p>
    </div>
    <div class="tag-area">
      <p class="hobby-tag"><%= link_to @post_hobby.tags.map(&:tag_name).join(',') %></p>
    </div>
  </div>

  <div class="col-6">
    <%= render 'comments/comment', post_hobby: @post_hobby, comment: @comment %>
  </div>

</div>